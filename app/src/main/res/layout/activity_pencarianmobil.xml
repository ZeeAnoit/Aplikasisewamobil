<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backrounnd"
    tools:context=".pencarianmobil">


    <ImageView
        android:id="@+id/bartop"
        android:layout_width="563dp"
        android:layout_height="68dp"
        app:srcCompat="@drawable/shapelagi"
        tools:layout_editor_absoluteX="-76dp" />

    <ImageView
        android:id="@+id/btnback"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_margin="22sp"
        app:srcCompat="@drawable/tombol_back" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobil Yang Ada di Makassar"
        android:layout_alignStart="@id/btnback"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bartop"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/shape1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <View
                android:id="@+id/mobil1"
                android:layout_width="367dp"
                android:layout_height="190dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/etViewNameCar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW INNOVA ZENIX"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_alignStart="@id/mobil1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:id="@+id/etViewSeat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 Kursi"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_below="@id/etViewNameCar1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"/>

            <TextView
                android:id="@+id/etViewCart1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Koper"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_below="@id/etViewSeat1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"/>

            <TextView
                android:id="@+id/etViewPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_below="@id/etViewCart1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 800.000 / 1 Hari"
                android:textColor="@color/aww"
                android:textSize="12dp"
                android:layout_below="@id/etViewPrice1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignEnd="@id/mobil1"
                android:layout_marginTop="26dp"
                app:srcCompat="@drawable/zenix1" />

            <View
                android:id="@+id/view2"
                android:layout_width="140dp"
                android:layout_height="41dp"
                android:background="@drawable/padelshift"
                android:layout_alignEnd="@id/mobil1"
                android:layout_alignBottom="@id/mobil1"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/mobil1"
                android:layout_alignBottom="@id/mobil1"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10dp"
                android:text="Automatic"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shape2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <View
                android:id="@+id/mobil2"
                android:layout_width="367dp"
                android:layout_height="190dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/etViewNameCar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALL NEW RUSH"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_alignStart="@id/mobil2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:id="@+id/etViewSeat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="7 Kursi"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_below="@id/etViewNameCar2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"/>

            <TextView
                android:id="@+id/etViewCart2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Koper"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_below="@id/etViewSeat2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"/>

            <TextView
                android:id="@+id/etViewPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_below="@id/etViewCart2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 450.000 / 1 Hari"
                android:textColor="@color/aww"
                android:textSize="12dp"
                android:layout_below="@id/etViewPrice2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"/>

            <ImageView
                android:layout_width="189dp"
                android:layout_height="130dp"
                android:layout_alignEnd="@id/mobil2"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/rush1" />

            <View
                android:id="@+id/viewpadel2"
                android:layout_width="140dp"
                android:layout_height="41dp"
                android:background="@drawable/padelshift"
                android:layout_alignEnd="@id/mobil2"
                android:layout_alignBottom="@id/mobil2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginEnd="40sp"
                android:layout_marginBottom="10dp"
                android:layout_alignEnd="@id/mobil2"
                android:layout_alignBottom="@id/mobil2"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shape3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <View
                android:id="@+id/mobil3"
                android:layout_width="367dp"
                android:layout_height="190dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/white"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/etViewNameCar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW PAJERO SPORT"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_alignStart="@id/mobil3"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"/>

            <TextView
                android:id="@+id/etViewSeat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="7 Kursi"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_below="@id/etViewNameCar3"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"/>

            <TextView
                android:id="@+id/etViewCart3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Koper"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_below="@id/etViewSeat3"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"/>

            <TextView
                android:id="@+id/etViewPrice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:layout_below="@id/etViewCart3"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 1.000.000 / 1 Hari"
                android:textColor="@color/aww"
                android:textSize="12dp"
                android:layout_below="@id/etViewPrice3"
                android:layout_marginTop="15dp"
                android:layout_marginStart="50dp"/>

            <ImageView
                android:layout_width="189dp"
                android:layout_height="130dp"
                android:layout_alignEnd="@id/mobil3"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/pajero1" />

            <View
                android:id="@+id/viewpadel3"
                android:layout_width="140dp"
                android:layout_height="41dp"
                android:background="@drawable/padelshift"
                android:layout_alignEnd="@id/mobil3"
                android:layout_alignBottom="@id/mobil3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automatic"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10dp"
                android:layout_alignEnd="@id/mobil3"
                android:layout_alignBottom="@id/mobil3"/>


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>