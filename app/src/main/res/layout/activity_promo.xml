<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Judul halaman -->

    <!-- Tombol untuk kembali -->

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="9dp"
        android:text="Promo"
        android:textColor="#000000"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <!-- GridView -->

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="90dp"
        android:columnWidth="200dp"
        android:horizontalSpacing="42dp"
        android:numColumns="2"
        android:padding="14dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="38dp" />

    <!-- Deskripsi Promo -->
    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Jelajahi penawaran istimewa kami! Dapatkan diskon eksklusif untuk berbagai jenis mobil sewaan. Nikmati pengalaman berkendara yang tak terlupakan dengan harga terbaik. Promo terbatas, segera pesan sekarang!"
        android:justificationMode="inter_word"
        android:textColor="#FFFFFF" />

</RelativeLayout>
